<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7b7b76"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_content"
        android:text="基于 Fresco 实现图片触控缩放效果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载网络图片"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_res"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content" />

    <Button
        android:id="@+id/btn_start_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载本地图片"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_url" />
</androidx.constraintlayout.widget.ConstraintLayout>